<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<AnchorPane id="MainPane" fx:controller="Grids.GridStageController" xmlns:fx="http://javafx.com/fxml" >
    <HBox id="ControlPane" prefHeight="50" minWidth="600" alignment="TOP_LEFT" spacing="10" xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: gray;">
        <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
        <ComboBox id="cbGridsize" prefWidth="40" onAction="#handlecbGridSize" fx:id="cbGridSize" />
        <Button id="btnAddLayer" prefWidth="80" text="Add" onAction="#handleAddLayer" fx:id="btnAddLayer" />
        <Button id="btnClearLayer" prefWidth="80" text="Clear" onAction="#handleClearLayer" fx:id="btnClearLayer" />
        <Button id="btnRemoveLayer" prefWidth="80" text="Remove" onAction="#handleRemoveLayer" fx:id="btnRemoveLayer" />
        <ComboBox id="cbLayers" prefWidth="200" onAction="#handlecbLayers" fx:id="cbLayers" />
    </HBox>
    <AnchorPane id="BottomPane" prefHeight="550" minWidth="600" xmlns:fx="http://javafx.com/fxml" AnchorPane.bottomAnchor="0">
        <Canvas id="Layer1" height="550" width="600" AnchorPane.topAnchor="0" fx:id="Layer1" />
        <Canvas id="Layer0" height="550" width="600" AnchorPane.topAnchor="0" fx:id="Layer0" />
    </AnchorPane>
</AnchorPane>